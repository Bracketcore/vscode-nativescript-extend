{
  "name": "nativescript-extend",
  "displayName": "Nativescript Extend",
  "description": "Nativescript extend tool pack, helps Nativescript developers create cross-platform mobiles easliy with the support of snippets, a xml validator and a run emulator from VSCode",
  "version": "2.5.1",
  "icon": "image/icon.png",
  "publisher": "Paul-Ehigie-Paul",
  "repository": {
    "url": "https://github.com/ehigiepaul/vscode-nativescript-extend.git"
  },
  "engines": {
    "vscode": "^1.30.0"
  },
  "galleryBanner": {
    "color": "#005cc8",
    "theme": "dark"
  },
  "categories": [
    "Snippets",
    "Programming Languages",
    "Extension Packs",
    "Other"
  ],
  "keywords": [
    "Nativescript",
    "typescript",
    "Add Files menu context",
    "XML Validation"
  ],
  "activationEvents": [
    "*"
  ],
  "extensionPack": [
    "redhat.vscode-xml"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "NE.snippets",
        "title": "Enable/Disable Snippets",
        "category": "Natviescript-Extend"
      },
      {
        "command": "NE.launchEmulator",
        "title": "Launch Emulator",
        "category": "Natviescript-Extend"
      },
      {
        "command": "NE.setupEmulator",
        "title": "Setup Emulator",
        "category": "Natviescript-Extend"
      },
      {
        "command": "NE.addXmlValidator",
        "title": "Add Nativescript XML Validator",
        "category": "Natviescript-Extend"
      },
      {
        "command": "NE.addJSPage",
        "title": "Add NativeScript JS Page",
        "category": "Natviescript-Extend"
      },
      {
        "command": "NE.addTsPage",
        "title": "Add NativeScript TS Page",
        "category": "Natviescript-Extend"
      },
      {
        "command": "NE.addNGPage",
        "title": "Add NativeScript NG Page",
        "category": "Natviescript-Extend"
      },
      {
        "command": "NE.addVuePage",
        "title": "Add NativeScript VUE Pages",
        "category": "Natviescript-Extend"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "",
          "command": "NE.addJSPage",
          "group": "Add Files"
        },
        {
          "when": "",
          "command": "NE.addTsPage",
          "group": "Add Files"
        },
        {
          "when": "",
          "command": "NE.addNGPage",
          "group": "Add Files"
        },
        {
          "when": "",
          "command": "NE.addVuePage",
          "group": "Add Files"
        }
      ]
    },
    "snippets": [
      {
        "language": "xml",
        "path": "./snippets/xml.json"
      },
      {
        "language": "html",
        "path": "./snippets/xml.json"
      },
      {
        "language": "vue",
        "path": "./snippets/xml.json"
      },
      {
        "language": "vue-html",
        "path": "./snippets/xml.json"
      }
    ],
    "configuration": {
      "title": "Nativescript Extend Configuration",
      "properties": {
        "NE.emulatorPath": {
          "type": "string",
          "default": "",
          "description": "The absolute path of the Android emulator script.",
          "scope": "application"
        },
        "NE.enable.snippets": {
          "type": "boolean",
          "default": true,
          "description": "The will enable snippet for the xml, vue and html files",
          "scope": "window"
        },
        "NE.fileAssociations": {
          "type": "array",
          "default": [],
          "items": {
            "type": "object",
            "properties": {
              "systemId": {
                "type": "string",
                "description": "The path or URL to the XML schema (XSD or DTD)"
              },
              "pattern": {
                "type": "string",
                "description": "File glob pattern. Example: **/*.Format.ps1xml\n\nMore information on the glob syntax: https://docs.oracle.com/javase/tutorial/essential/io/fileOps.html#glob",
                "markdownDescription": "File glob pattern. Example: `**/*.Format.ps1xml`\n\nMore information on the glob syntax: https://docs.oracle.com/javase/tutorial/essential/io/fileOps.html#glob"
              }
            },
            "required": [
              "systemId",
              "pattern"
            ]
          },
          "description": "Allows XML schemas to be associated to file name patterns.\n\nExample:\n[{\n  \"systemId\": \"path/to/file.xsd\",\n  \"pattern\": \"file1.xml\"\n},\n{\n  \"systemId\": \"http://www.w3.org/2001/XMLSchema.xsdd\",\n  \"pattern\": \"**/*.xsd\"\n}]",
          "markdownDescription": "Allows XML schemas to be associated to file name patterns.\n\nExample:\n```json\n[{\n  \"systemId\": \"path/to/file.xsd\",\n  \"pattern\": \"file1.xml\"\n},\n{\n  \"systemId\": \"http://www.w3.org/2001/XMLSchema.xsd\",\n  \"pattern\": \"**/*.xsd\"\n}]\n```",
          "scope": "resource"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "dependencies": {
    "expand-home-dir": "^0.0.3",
    "find-java-home": "0.2.0",
    "glob": "^7.1.4",
    "path-exists": "^4.0.0"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.0.8",
    "gulp": "^4.0.2",
    "gulp-tslint": "^8.1.4",
    "mocha": "^6.1.4",
    "tslint": "^5.17.0",
    "typescript": "^3.5.2",
    "vscode": "^1.1.34",
    "vscode-languageclient": "^5.2.1"
  }
}
