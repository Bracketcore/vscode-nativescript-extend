{
    "name": "nativescript-extend",
    "displayName": "Nativescript Extend",
    "description": "Nativescript extend tool pack, helps Nativescript developers create cross-platform mobiles easliy with the support of snippets, a xml validator and a run emulator from VSCode",
    "version": "1.11.29",
    "icon": "image/icon.png",
    "publisher": "Paul-Ehigie-Paul",
    "repository": {
        "url": "https://github.com/ehigiepaul/vscode-nativescript-extend.git"
    },
    "engines": {
        "vscode": "^1.28.0"
    },
    "galleryBanner": {
        "color": "#005cc8",
        "theme": "dark"
    },
    "categories": [
        "Snippets",
        "Programming Languages",
        "Extension Packs",
        "Other"
    ],
    "keywords": [
        "Nativescript",
        "typescript",
        "IOS",
        "Android",
        "Add Files menu context",
        "XML Validation"
    ],
    "activationEvents": [
        "workspaceContains:**/nativescript*"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [{
                "command": "nativescriptExtend.snippets",
                "title": "Enable/Disable Snippets",
                "category": "Nativescript-Extend"
            },
            {
                "command": "nativescriptExtend.launchEmulator",
                "title": "Launch Emulator",
                "category": "Nativescript-Extend"
            },
            {
                "command": "nativescriptExtend.setupEmulator",
                "title": "Setup Emulator",
                "category": "Nativescript-Extend"
            },
            {
                "command": "nativescriptExtend.addXmlValidator",
                "title": "Add Nativescript XML Validator",
                "category": "Nativescript-Extend"
            },
            {
                "command": "nativescriptExtend.addJSPage",
                "title": "Add NativeScript JS Page",
                "category": "Nativescript-Extend"
            },
            {
                "command": "nativescriptExtend.addTsPage",
                "title": "Add NativeScript TS Page",
                "category": "Nativescript-Extend"
            },
            {
                "command": "nativescriptExtend.addNGPage",
                "title": "Add NativeScript NG Page",
                "category": "Nativescript-Extend"
            },
            {
                "command": "nativescriptExtend.addVuePage",
                "title": "Add NativeScript VUE Pages",
                "category": "Nativescript-Extend"
            }
        ],
        "menus": {
            "explorer/context": [{
                    "when": "",
                    "command": "nativescriptExtend.addJSPage",
                    "group": "Add Files"
                },
                {
                    "when": "",
                    "command": "nativescriptExtend.addTsPage",
                    "group": "Add Files"
                },
                {
                    "when": "",
                    "command": "nativescriptExtend.addNGPage",
                    "group": "Add Files"
                },
                {
                    "when": "",
                    "command": "nativescriptExtend.addVuePage",
                    "group": "Add Files"
                }
            ]
        },
        "snippets": [{
                "language": "vue",
                "path": "./snippets/xml.json"
            },
            {
                "language": "xml",
                "path": "./snippets/xml.json"
            },
            {
                "language": "vue-html",
                "path": "./snippets/xml.json"
            },
            {
                "language": "html",
                "path": "./snippets/xml.json"
            }
        ],
        "typescriptServerPlugins": [{
            "name": "typescript-styled-plugin"
        }],
        "configuration": {
            "title": "Nativescript Extend Configuration",
            "properties": {
                "nativescript-extend.intellisence": {
                    "type": "boolean",
                    "default": false,
                    "description": "This installs my custom version of red Hat xml extension, which will help in the Nativescript intellisense and validation.",
                    "scope": "application"
                },
                "nativescript-extend.emulatorPath": {
                    "type": "string",
                    "default": "",
                    "description": "The absolute path of the Android emulator script.",
                    "scope": "application"
                },
                "nativescript-extend.enable.snippets": {
                    "type": "boolean",
                    "default": true,
                    "description": "The will enable snippet for the xml, vue and html files",
                    "scope": "window"
                },
                "nativescript-extend.trace.server": {
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the XML language server.",
                    "scope": "window"
                },
                "nativescript-extend.catalogs": {
                    "type": "array",
                    "default": [],
                    "items": {
                        "type": "string"
                    },
                    "description": "Array of XML Catalogs",
                    "scope": "window"
                },
                "nativescript-extend.logs.client": {
                    "type": "boolean",
                    "default": true,
                    "description": "Should the server log to client output"
                },
                "nativescript-extend.format.splitAttributes": {
                    "type": "boolean",
                    "default": false,
                    "description": "Split multiple attributes each onto a new line",
                    "scope": "window"
                },
                "nativescript-extend.format.joinCDATALines": {
                    "type": "boolean",
                    "default": false,
                    "description": "Join lines in a CDATA tag's content",
                    "scope": "window"
                },
                "nativescript-extend.format.joinContentLines": {
                    "type": "boolean",
                    "default": false,
                    "description": "Join lines in an element's content",
                    "scope": "window"
                },
                "nativescript-extend.format.joinCommentLines": {
                    "type": "boolean",
                    "default": false,
                    "description": "Join comment content on format",
                    "scope": "window"
                },
                "nativescript-extend.format.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable/disable ability to format document",
                    "scope": "window"
                },
                "nativescript-extend.fileAssociations": {
                    "type": "array",
                    "default": [],
                    "items": {
                        "type": "object",
                        "properties": {
                            "systemId": {
                                "type": "string",
                                "description": "The path or URL to the XML schema (XSD or DTD)"
                            },
                            "pattern": {
                                "type": "string",
                                "description": "File glob pattern. Example: **/*.Format.ps1xml\n\nMore information on the glob syntax: https://docs.oracle.com/javase/tutorial/essential/io/fileOps.html#glob",
                                "markdownDescription": "File glob pattern. Example: `**/*.Format.ps1xml`\n\nMore information on the glob syntax: https://docs.oracle.com/javase/tutorial/essential/io/fileOps.html#glob"
                            }
                        },
                        "required": [
                            "systemId",
                            "pattern"
                        ]
                    },
                    "description": "Allows XML schemas to be associated to file name patterns.\n\nExample:\n[{\n  \"systemId\": \"path/to/file.xsd\",\n  \"pattern\": \"file1.xml\"\n},\n{\n  \"systemId\": \"http://www.w3.org/2001/XMLSchema.xsdd\",\n  \"pattern\": \"**/*.xsd\"\n}]",
                    "markdownDescription": "Allows XML schemas to be associated to file name patterns.\n\nExample:\n```json\n[{\n  \"systemId\": \"path/to/file.xsd\",\n  \"pattern\": \"file1.xml\"\n},\n{\n  \"systemId\": \"http://www.w3.org/2001/XMLSchema.xsd\",\n  \"pattern\": \"**/*.xsd\"\n}]\n```",
                    "scope": "resource"
                },
                "nativescript-extend.completion.autoCloseTags": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable/disable autoclosing of XML tags. \n\nIMPORTANT: Turn off editor.autoClosingTags for this to work",
                    "scope": "resource"
                },
                "nativescript-extend.server.vmargs": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": "-noverify -Xmx64M -XX:+UseG1GC -XX:+UseStringDeduplication",
                    "description": "Specifies extra VM arguments used to launch the XML Language Server. Eg. use `-noverify -Xmx1G  -XX:+UseG1GC -XX:+UseStringDeduplication` to bypass class verification, increase the heap size to 1GB and enable String deduplication with the G1 Garbage collector",
                    "scope": "window"
                }
            }
        },
        "configurationDefaults": {
            "[xml]": {
                "editor.autoClosingBrackets": "never"
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {
        "@types/mocha": "^2.2.32",
        "@types/node": "^10.12.10",
        "mocha": "^5.2.0",
        "shelljs": "^0.8.3",
        "typescript": "^2.0.3",
        "vscode": "1.1.22"
    },
    "devDependencies": {
        "expand-home-dir": "^0.0.3",
        "find-java-home": "0.2.0",
        "glob": "^7.1.3",
        "gulp": "^4.0.0",
        "path-exists": "^3.0.0",
        "vscode-languageclient": "~5.1.1"
    }
}